{
  "name": "wave-simulation",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "generate-icons": "ts-node --esm bin/generate-icons.ts",
    "compile": "tsc --noEmit",
    "lint": "next lint",
    "lint:ci": "DEBUG=eslint:cli-engine next lint",
    "prettier": "prettier --write '**/*.(js|ts|tsx|md|json)'",
    "prettier:ci": "prettier --check '**/*.(js|ts|tsx|md|json)'"
  },
  "dependencies": {
    "default-import": "^1.1.7",
    "next": "^14.2.20",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/node": "^18.19.67",
    "@types/react": "^18.3.14",
    "@types/react-dom": "^18.3.2",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "autoprefixer": "^10.4.20",
    "chalk": "^5.3.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.0.4",
    "eslint-config-prettier": "^9.1.0",
    "lefthook": "^1.9.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.16",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "eslint:recommended",
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:@typescript-eslint/strict",
      "prettier"
    ]
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ],
    "semi": false,
    "singleQuote": true,
    "importOrder": [
      "^\\.\\./",
      "^\\./"
    ],
    "importOrderSortSpecifiers": true
  }
}
